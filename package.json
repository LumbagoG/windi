{
    "name": "test-electron",
    "private": true,
    "version": "0.1.0",
    "description": "Test Electron + React (Vite) app with FSD structure",
    "main": "dist/main/index.cjs",
    "author": "",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "dev": "cross-env ELECTRON_ENTRY=out/main/index.js electron-vite dev",
        "build": "electron-vite build",
        "preview": "electron-vite preview",
        "dev:web": "vite --config vite.web.config.ts",
        "build:web": "vite build --config vite.web.config.ts",
        "preview:web": "vite preview --config vite.web.config.ts",
        "pack": "yarn lint:all && yarn build && electron-builder --dir",
        "dist": "yarn lint:all && yarn build && electron-builder",
        "lint": "yarn lint:all",
        "lint:biome": "biome check . --no-errors-on-unmatched",
        "lint:types": "tsc -p tsconfig.json --noEmit",
        "lint:fsd": "yarn lint:steiger",
        "lint:steiger": "steiger ./src/renderer",
        "format": "yarn format:biome",
        "format:biome": "biome format --write . --no-errors-on-unmatched",
        "lint:all": "yarn lint:biome && yarn lint:types && yarn lint:steiger",
        "format:all": "yarn format:biome",
        "lint-staged": "yarn lint-staged",
        "prepare": "husky"
    },
    "dependencies": {
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.8",
        "@feature-sliced/steiger-plugin": "^0.5.7",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react": "^4.3.4",
        "cross-env": "^7.0.3",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "electron-vite": "^2.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.2",
        "steiger": "^0.5.11",
        "typescript": "^5.7.2",
        "vite": "^5.4.21"
    },
    "build": {
        "appId": "com.test-electron.app",
        "productName": "TestElectron",
        "asar": true,
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**",
            "package.json"
        ],
        "mac": {
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Utility"
        }
    }
}
